<body>
    <div>
        <header style="height:510px;">
            <div id="home">
                <ul id="cbp-bislideshow" class="cbp-bislideshow">
                    <li>

                        <img src="~/Content/Menu/images/turizm.jpg" />
                    </li>
                </ul>
                <div class="container">
                    <div class="header animated tada">


                    </div>
                </div>
            </div>
            <section class="ss-style-bottom"></section>


        </header>

        @*MENU*@
        <section>
            <div class="container">
                
                <ul id="gn-menu" class="gn-menu-main">
                    <nav class="gn-menu-wrapper">

                        <div class="gn-scroller">
                            <ul class="gn-menu">

                                <!--Profil-->
                                <li>
                                    @if (Session["NameSurname"] != null)
                                    {
                                        <div class="row" style="background-color: #FAF0E6;">
                                            <div class="col-lg-2"></div>
                                            <div class="col-lg-4">
                                                <a style="height:80px; width:80px;" href="Profile/Index/@Session["EnterID"]" class="del"><img style="width:80px; height:80px;" src="@Session["Image"]" class="img-rounded"></a>

                                            </div>
                                            <div class="col-lg-4">
                                                <h5 style="color:black; display:inline-block;">@Session["NameSurname"]</h5>
                                            </div>
                                            <div class="col-lg-2"></div>
                                        </div>

                                    }
                                    else
                                    {
                                        <a href="/User/Index/">Login</a>
                                    }
                                </li>
                                <li><a href="/Home/Index" class="gn-icon fa-heart">Home</a></li>

                                <li><a href="/Contact/Index" class="gn-icon fa-comment">İletişim</a></li>
                                <li><a href="/About/Index" class="gn-icon fa-comment">About</a></li>
                                <li><a href="/Forum/Index" class="gn-icon fa-heart">Forum</a></li>
                                <li><a href="/Activity/Index" class="gn-icon fa-heart">Activities</a></li>
                                <li><a href="#nenerede" class="gn-icon fa-users">What Where?</a></li>

                                <li>
                                    <ul class="gn-submenu">
                                        <li><a href="/Restaurant/Index" class="gn-icon fa-chevron-right">Restaurant</a></li>
                                        <li><a href="/TourismTravel/Index" class="gn-icon fa-chevron-right">Tourism</a></li>
                                        <li><a href="/Advice/Index" class="gn-icon fa-chevron-right">Advices</a></li>
                                    </ul>
                                </li>
                                <li><a href="/Contact/Index" class="gn-icon fa-book">Contact</a></li>
                            </ul>
                        </div><!--end gn-scroller-->
                    </nav>
                    <!--Çıkışşş-->
                    <li class="gn-trigger">
                        <div class="trigger"><a class="gn-icon gn-icon-menu"><span>Menu</span></a></div>
                        @if (Session["NameSurname"] != null)
                        {
                            <a href="/Home/Logout" class="btn" style="background-color: rgb(189,148,104); height:30px; width:70px; color:wheat !important; position:relative; left:1500px; bottom:35px; color:white ">Çıkış</a>
                        }


                    </li>

                    <li class="back"><a class="gn-icon fa-angle-double-up" href="#top"></a></li>
                </ul>
            </div><!--end container-->

        </section> @*END MENU*@

        <div class="row">
            <div class="col-lg-9">  @RenderBody()</div>
            <div class="col-lg-3"  >               
                <div class="panel panel-default">
                   <!--Score Bölümü-->
                    @foreach (ScoreViewModel item in (List<ScoreViewModel>)Session["TopFive"])
                    {
                        <ul class="list-group" id="contact-list">
                            <li class="list-group-item">
                                <div class="col-xs-12 col-sm-3">
                                    <a href="/Profile/Index/@item.UserID"><img src="@item.ImageURL" class="img-responsive img-circle" /></a>
                                </div>
                                <div class="col-xs-12 col-sm-9">
                                    <div class="row">
                                        <span style="font-size:20px;" class="name">@item.NameSurname @item.Score kişiye yardımcı oldu</span><br />
                                   
                                    
                                    </div>
                                                             
                                </div>
                                <div class="clearfix"></div>
                            </li>
                        </ul>
                    }
                </div>
              
            </div>
        </div>
        <footer class="copyright">
            <div>
                @RenderSection("Footer", false)
                <p>&copy; @DateTime.Now.Year - All Right Reserved</p>
            </div>
        </footer>
    </div>


