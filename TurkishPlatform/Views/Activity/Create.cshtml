@using TurkishPlatform.Models
@model Activity

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">

    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <style>
        * {
            font-family: 'Open Sans', sans-serif;
        }
    </style>
</head>
<body>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @Html.ValidationSummary();
        </div>
    }

    <form class="form-horizontal" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <fieldset>
            <!-- Form Name -->
            <h2 class="text-center" style="margin-top:200px">  Etkinlik Oluştur </h2>
            <!-- Text input-->
            <div class="form-group" style="margin-top:50px">
                <label class="col-md-4 control-label" for="event_name">Etkinlik İsmi</label>
                <div class="col-md-4">
                    <input id="event_name" name="name" type="text" placeholder="Etkinlik İsmi" class="form-control input-md">

                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="textinput">Etkinlik Günü</label>
                <div class="col-md-4">
                    <input id="textinput" name="date" type="date" placeholder="Etkinlik Günü" class="form-control input-md">
                    @*<span class="help-block">help</span>*@
                </div>
            </div>
            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="textinput">Başlama Saati</label>
                <div class="col-md-4">
                    <input id="textinput" name="StartTime" type="time" placeholder="Başlama Saati" class="form-control input-md">
                    @*<span class="help-block">help</span>*@
                </div>
            </div>
            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="textinput">Bitiş Saati</label>
                <div class="col-md-4">
                    <input id="textinput" name="FinishTime" type="time" placeholder="Bitiş Saati" class="form-control input-md">
                    @*<span class="help-block">help</span>*@
                </div>
            </div>
            <!-- Textarea -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="textarea">Resim Seç</label>
                <div class="col-md-4">
                    <input id="textinput" name="Image" type="file" placeholder="Resim" class="form-control input-md">
                </div>
            </div>
            <!-- Select Basic -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="selectbasic">Ülke</label>
                <div class="col-md-4">
                    <select id="selectbasic" name="CountryId" class="form-control">
                        <option value="1">Option one</option>
                        <option value="2">Option two</option>
                    </select>
                </div>
            </div>
            <!-- Textarea -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="textarea">İçerik</label>
                <div class="col-md-4">
                    <textarea class="form-control" id="textarea" name="Content"></textarea>
                </div>
            </div>
            <!-- Textarea -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="textarea">Adres</label>
                <div class="col-md-4">
                    <textarea class="form-control" id="textarea" name="Address"></textarea>
                </div>
            </div>

            <!-- Textarea -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="textarea">Fiyat Bilgisi</label>
                <div class="col-md-4">
                    <textarea class="form-control" id="textarea" name="Price"></textarea>
                </div>
            </div>

            <div class="form-group">


                <button class="btn btn-success " name="Insert" style="width: 32%; margin-right: 786px;}">Kaydet</button>

            </div>

        </fieldset>

    </form>
</body>
</html>

