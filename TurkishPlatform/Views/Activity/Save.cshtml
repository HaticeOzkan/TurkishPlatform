<!DOCTYPE html>
<html>
<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Shadows+Into+Light' rel='stylesheet' type='text/css'>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <style>
        * form {
           text-align: center;   font-family: 'Shadows Into Light', cursive;  font-size: 40px; color:black;
        }
    </style>
</head>
<body>

    <form class="form-horizontal">
        <fieldset>
            <!-- Form Name -->
            <h2>Etkinlik Oluştur </h2>
            <!-- Text input-->
            <div class="form-group" style="margin-top:50px">
                <label class="col-md-4 control-label" for="event_name">Etkinlik İsmi</label>
                <div class="col-md-4">
                    <input id="event_name" name="event_name" type="text" placeholder="Etkinlik İsmi" class="form-control input-md">

                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="textinput">Etkinlik Günü</label>
                <div class="col-md-4">
                    <input id="textinput" name="textinput" type="date" placeholder="Bitiş Saati" class="form-control input-md">
                    @*<span class="help-block">help</span>*@
                </div>
            </div>
            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="textinput">Başlama Saati</label>
                <div class="col-md-4">
                    <input id="textinput" name="textinput" type="time" placeholder="Başlama Saati" class="form-control input-md">
                    @*<span class="help-block">help</span>*@
                </div>
            </div>
            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="textinput">Bitiş Saati</label>
                <div class="col-md-4">
                    <input id="textinput" name="textinput" type="time" placeholder="Bitiş Saati" class="form-control input-md">
                    @*<span class="help-block">help</span>*@
                </div>
            </div>
            <!-- Textarea -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="textarea">Resim Seç</label>
                <div class="col-md-4">
                    <input id="textinput" name="textinput" type="text" placeholder="Resim" class="form-control input-md">
                </div>
            </div>
            <!-- Select Basic -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="selectbasic">Ülke</label>
                <div class="col-md-4">
                    <select id="selectbasic" name="selectbasic" class="form-control">
                        <option value="1">Option one</option>
                        <option value="2">Option two</option>
                    </select>
                </div>
            </div>
            <!-- Textarea -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="textarea">İçerik</label>
                <div class="col-md-4">
                    <textarea class="form-control" id="textarea" name="textarea"></textarea>
                </div>
            </div>
            <!-- Textarea -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="textarea">Adres</label>
                <div class="col-md-4">
                    <textarea class="form-control" id="textarea" name="textarea"></textarea>
                </div>
            </div>
           
            <!-- Textarea -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="textarea">Fiyat Bilgisi</label>
                <div class="col-md-4">
                    <textarea class="form-control" id="textarea" name="textarea"></textarea>
                </div>
            </div>
        </fieldset>

    </form>
</body>
</html>
