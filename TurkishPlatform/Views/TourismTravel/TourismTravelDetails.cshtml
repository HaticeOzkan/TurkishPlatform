@using TurkishPlatform.Models
@model  Tourism
@{
    ViewBag.Title = "TourismTravelDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="margin-left: 17px">@Model.LocationName</h2>


@section CSS{
     
    <link href="~/Content/Restaurant/css/fontawesome-all.min.css" rel="stylesheet" />
    <link href="~/Content/Restaurant/css/main.css" rel="stylesheet" />
    <link href="~/Content/Restaurant/css/normalize.css" rel="stylesheet" />
    <link href="~/Content/Restaurant/css/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/Content/Restaurant/css/owl.theme.default.min.css" rel="stylesheet" />
    <link href="~/Content/Restaurant/css/styleR.css" rel="stylesheet" />
    <script src="~/Content/Restaurant/js/jquery-3.3.1.min.js"></script>
    <style>
        .resim {
            width: 65% !important;
        }

            .resim img {
                height: 100% !important;
            }
    </style>
}
<div class="container">
    <div class="row">
        <div class="resim"></div>
        <div class="icerik">
            @foreach (Tourism item in ViewBag.Tourism)

            {  <p>@item.Content</p>


            }
        </div>
        <div class="mesaj">
            @foreach (LocationComment item in ViewBag.Comment)
            {

               

                <strong>@item.User.NameSurname</strong>
                if (item.UserId== ViewBag.Name) { 
                <span class="sil btn btn-danger" mesajid="@item.CommentId"> Sil</span>
                }


                <p>@item.Content</p>

            }
        </div>
        <div class="col-md-4 text-center " style="">
            @*bunu kaldırıp değişiklik vererek yapabilirsn*@



            <asp:TextBox ID="Mesaj" TextMode="MultiLine" Rows="5" CssClass="form-control" runat="server"></asp:TextBox>
            <asp:Button ID="Button1" runat="server" Text="Button" CssClass="btn btn-success" OnClick="Button1_Click" />
           

         
            @if (ViewBag.c) {  
           <asp:Button ID="Button1"  id="delete" runat="server"    CssClass="btn btn-success" OnClick="Button1_Click" />
            }
            else
            {
                <form method="post">
                    <input id="textinput" name="comment" type="text" onblur="this.type=date" style="height:80px;width: 206%;margin-left: 244px;" placeholder="Yorum Yap" class="form-control input-md text-center "><br />
                    <button class="input-md btn btn-success" name="Insert" style="width:205%;margin-left: 244px;float:none;">Yorum Yap</button>
                </form> }
        </div>

    </div>

</div>
<script>
    $("#delete").click(function () {
        var _this = $(this);
        var id = $(this).attr("mesajid");
        $.ajax({   
            url: "/TourismTravel/DeleteComment?deleteid="+ id,
            type: "POST",
            success: function (IsitOk) {
                if (IsitOk) {
                    _this.parent().slideUp("slow");
                }
                else {
                    alert("bir hata oluştu")
                }
            }
        })

    });

</script>

