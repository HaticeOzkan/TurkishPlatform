@section Scripts{
    <script>
        var owl = $('.owl-carousel');
        owl.owlCarousel({
            items: 2,
            loop: true,
            margin: 10,
            autoplay: true,
            autoplayTimeout: 200,
            autoplayHoverPause: true,
            nav: true,
            dots: true
        });
        $('.play').on('click', function () {
            owl.trigger('play.owl.autoplay', [1000])
        })
        $('.stop').on('click', function () {
            owl.trigger('stop.owl.autoplay')
        })
    </script>


    <script>
 @*yorum sil*@
        $(".yorumSil").click(function () {
            var _this = $(this);
            var id = $(this).attr("yorumid");
            $.ajax({
                url: "/Restaurant/DeleteComment?deleteid=" + id,
                type: "POST",
                success: function (IsitOk) {
                    if (IsitOk) {
                        _this.parent().slideUp("slow");
                    }
                    else {
                        alert("Bir hata oluştu. Daha sonra tekrar deneyin!")
                    }
                }
            })
		});

    </script>
