                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <strong>@item.User.NameSurname</strong> <span class="text-muted">commented 5 days ago</span>
                                @if (item.UserId == Convert.ToInt32(Session["EnterID"])) //yorum yapan kişinin id'si
                                {
                                    <button yorumid="@item.CommentId" class="yorumSil btn btn-warning">Sil</button>
                                }

                                <div class="panel-body">
                                    @item.Content
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <section class="commentList">
            @if (Session["EnterID"] != null)
            {

                <form method="post">
                    <div class="newComment">
                        <input type="hidden" value="@ViewBag.RestaurantId" name="RestaurantId" />
                        <textarea name="Content" class="addComment" placeholder="Comment.."></textarea>
