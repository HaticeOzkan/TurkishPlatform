        @foreach (RestaurantComment item in ViewBag.Comment)
        {
            <div class="container">
                <div class="row yorum">
                    <div class="col-sm-1">
                        @if (item.User.ImageURL == null)
                        {
                            <div class="thumbnail">
                                <img class="img-responsive user-photo" src="https://ssl.gstatic.com/accounts/ui/avatar_2x.png">
                            </div>
                        }
                        else
                        {
                            <div class="thumbnail">
