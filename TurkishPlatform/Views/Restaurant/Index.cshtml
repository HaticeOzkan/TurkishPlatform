@using TurkishPlatform.Models
@model RestaurantViewModel

@{
	ViewBag.Title = "Restaurans";
	Layout = "~/Views/Shared/_Layout.cshtml";
}


@section CSS{
	<img src="~/Content/Restaurant/img/favicon.png" />
	<link href="~/Content/Restaurant/css/fontawesome-all.min.css" rel="stylesheet" />
	<link href="~/Content/Restaurant/css/main.css" rel="stylesheet" />
	<link href="~/Content/Restaurant/css/normalize.css" rel="stylesheet" />
	<link href="~/Content/Restaurant/css/owl.carousel.min.css" rel="stylesheet" />
	<link href="~/Content/Restaurant/css/owl.theme.default.min.css" rel="stylesheet" />
	<link href="~/Content/Restaurant/css/styleR.css" rel="stylesheet" />
	<script src="~/Content/Restaurant/js/jquery-3.3.1.min.js"></script>

	<style>
		.resim {
			width: 65% !important;
		}

			.resim img {
				height: 100% !important;
			}
	</style>
}

<section class="restorant">
	<div class="row">
		@foreach (Restaurant item in ViewBag.AllRestaurant)
		{
			<div class="col-md-6 resim">
				<div class="product-box-layout3">
