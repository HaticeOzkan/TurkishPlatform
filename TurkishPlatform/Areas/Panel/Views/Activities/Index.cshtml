@model IEnumerable<TurkishPlatform.Models.Activity>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<br /><br />
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
